<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee                       http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">

	<!-- 필터순서는 적는 순서 -->
	<!-- 필터 -->
	<filter>
		<filter-name>charFilter</filter-name>
		<filter-class>com.cos.hello.config.CharFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>charFilter</filter-name>
		<url-pattern>/*</url-pattern>  <!-- 모든 요청을 charFilter이 가로채기함 -->
	</filter-mapping>
	<!-- 필터 -->
	
	<!-- 필터 -->
	<filter>
		<filter-name>attackFilter</filter-name>
		<filter-class>com.cos.hello.config.AttackFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>attackFilter</filter-name>
		<url-pattern>/user</url-pattern>  <!-- 모든 요청을 charFilter이 가로채기함 -->
	</filter-mapping>
	<!-- 필터 -->
	
	<!-- 필터 -->
	<filter>
		<filter-name>joinFilter</filter-name>
		<filter-class>com.cos.hello.config.JoinFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>joinFilter</filter-name>
		<url-pattern>/user</url-pattern>  <!-- 모든 요청을 charFilter이 가로채기함 -->
	</filter-mapping>
	<!-- 필터 -->
	
	<!-- 필터 -->
	<filter>
		<filter-name>loginFilter</filter-name>
		<filter-class>com.cos.hello.config.LoginFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>loginFilter</filter-name>
		<url-pattern>/user</url-pattern>  <!-- 모든 요청을 charFilter이 가로채기함 -->
	</filter-mapping>
	<!-- 필터 -->
	
	<!-- MySQL -->
	<description>MySQL Test App</description>
	<resource-ref>
		<description>DB Connection</description>
		<res-ref-name>mysql/ssar</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	
	<!-- Oracle -->
	<description>Oracle Test App</description>
	<resource-ref>
		<description>DB Connection</description>
		<res-ref-name>oracle/system</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

	<!-- servlet 선언문 -->
	<servlet>
		<servlet-name>userController</servlet-name>
		<servlet-class>com.cos.hello.controller.UserController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>userController</servlet-name>
		<url-pattern>/user</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>boardController</servlet-name>
		<servlet-class>com.cos.hello.controller.BoardController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>boardController</servlet-name>
		<url-pattern>/board</url-pattern>
	</servlet-mapping>
	<!-- servlet 선언문 -->

</web-app>
